    "@azure/communication-email": "^1.0.0",
    "@azure/communication-sms": "1.2.0-beta.4",
    "@azure/storage-blob": "^12.17.0",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/schema": "^10.0.23",
    "@types/geojson": "^7946.0.16",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
