    "graphql": "^16.11.0",
    "graphql-constraint-directive": "^6.0.0",
    "graphql-request": "^7.2.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "12.0.0",
    "graphql-upload-minimal": "^1.6.1",
    "import": "^0.0.6",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "pg": "^8.16.3",
    "postgres": "^3.4.3",
    "sharp": "^0.32.6",
    "ts-node": "^10.9.2",
    "twilio": "^5.7.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
